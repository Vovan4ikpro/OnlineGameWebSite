<h1>Редагувати дані користувача</h1>

<%= form_with(model: @user, url: user_path(@user), method: :patch) do |f| %>

 <div class = "update-info">
  <div class="field1">
    <%= f.label "Ім'я користувача:" %>
    <%= f.text_field :username %>
  </div>

  <div class="field2">
    <%= f.label "Email:" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field3">
    <%= f.label "Фото:" %>
    <%= f.file_field :avatar %>
  </div>

  <%= f.hidden_field :role_id, value: 1 %>
  <%= f.hidden_field :birth_date %>
  <div class="actions">
    <%= f.submit "Оновити користувача"%>
  </div>

 </div>
<% end %>
<%= link_to 'Повернутися в профіль', user_path(current_user), class: "linkForBack" %>

